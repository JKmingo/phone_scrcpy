<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/white" /> <!-- 按下时文字颜色为白色 -->
    <item android:state_focused="true" android:color="@color/white" /> <!-- 选中时文字颜色为白色 -->
    <item android:state_enabled="false" android:color="@color/dark_grey" /> <!-- 选中时文字颜色为白色 -->
    <item android:color="@color/deep_grey" /> <!-- 默认状态下文字颜色为黑色 -->
</selector>
